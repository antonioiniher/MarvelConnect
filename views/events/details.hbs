<div class="bgeventdetails">
    <div class="container details">
        <div class="row">
            <div class="col-md-6 sombra">
                <h2>Detalles</h2>
                <p>{{event.name}}</p>
                <p>{{formattedDate}}</p>
                <p>{{event.description}}</p>

                <ul>
                    {{#each event.participants}}
                    <li>{{this.username}}</li>
                    {{/each}}
                </ul>

                <input type="hidden" id="identific" value="{{event.id}}">
                {{#if eventState}}
                <form action="/eventos/{{event.id}}/apuntarse" method="post">
                    <button type="submit" class="btn btn-dark">Desapuntarse</button>
                </form>
                {{else}}
                <form action="/eventos/{{event.id}}/apuntarse" method="post">
                    <button type="submit" class="btn btn-dark">Apuntarse</button>
                </form>
                {{/if}}
                {{#if isAdminOrCreator}}
                <a href="/eventos/{{event._id}}/editar" class="btn btn-dark">Editar Evento</a>
                {{/if}}
                {{#if isAdmin}}
                <form action="/eventos/{{event._id}}/borrar" method="post">
                    <button type="submit" class="btn btn-dark">Borrar Evento</button>
                </form>
                {{/if}}
            </div>
            <div class="col-md-6 ">
                <figure id="myMap" class="mapStyle"></figure>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/map-styles.js"></script>
<script src="/js/place-map.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAXrluxt6edH6GHzswvJd_nckU_vPeBjzc&callback=init"></script>
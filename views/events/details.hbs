<h1>Detalles</h1>
<p>{{event.name}}</p>
<p>{{littledate}}</p>
<p>{{event.description}}</p>
<p>{{event.creator}}</p>

{{#if isAdminOrCreator}}
<a href="/eventos/{{event._id}}/editar" class="btn btn-dark">Editar Evento</a>
{{/if}}
{{#if isAdmin}}
<form action="/eventos/{{event._id}}/borrar" method="post">
    <button type="submit" class="btn btn-dark">Borrar Evento</button>
</form>
{{/if}}


<h1>Map</h1>
<hr>
<figure id="myMap"></figure>

<input type="hidden" id="identific" value="{{event.id}}">

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/place-map.js"></script>

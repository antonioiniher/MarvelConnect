<div class="profile">
    <div class="container pt-5 fondoblanco2">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 text-center pt-3">
                <img src="{{user.imageUrl}}" alt="{{user.username}}-img">
            </div>
            <div class="col-md-6 info">
                <p><strong>Nombre de usuario: </strong>{{user.username}}</p>
                <p><strong>E-mail: </strong>{{user.email}}</p>
                <p><strong>Fecha de nacimiento: </strong>{{formattedDate}}</p>
                <p><strong>Descripci√≥n: </strong>{{user.description}}</p>
                <p><strong>Rol: </strong>{{user.role}}</p>
                <p><strong>Personajes favoritos: </strong></p>
                {{#each user.favCharacters}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
        <div class="text-center pt-5">
            {{#if isAdmin}}
            <a href="/usuario/{{user._id}}/editar" class="btn btn-dark">Editar perfil</a>
            <form action="/usuario/{{user._id}}/eliminar" method="POST">
                <button type="submit" class="btn btn-dark">Eliminar perfil</button>
            </form>
            <form action="/usuario/{{user._id}}/creator" method="POST">
                <button type="submit" class="btn btn-dark">Hacer creador</button>
            </form>
            {{/if}}
            {{#if isOwner}}
            <a href="/usuario/{{user._id}}/editar" class="btn btn-dark">Editar perfil</a>
            {{/if}}
        </div>
    </div>
</div>

<script src="/utils/date.js"></script>
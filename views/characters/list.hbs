<div class="listBg text-center">
    <div class="container pt-5">
        <h2 style="background-color: black; color: red;">Lista de personajes</h2>

        <form action="/personajes" method="GET">
            <label for="name" class="form-label"></label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Buscar por nombre">
        </form>

        <form action="/personajes" method="GET">
            <label for="serie" class="form-label"></label>
            <input type="text" class="form-control" id="serie" name="serie" placeholder="Buscar por serie">
        </form>



        <div class="row">
            {{#each characters}}
            <div class="col-md-4 d-flex justify-content-center text-center">
                <div class="card mt-5" style="width: 18rem;">

                    <img src="{{thumbnail.path}}.{{thumbnail.extension}}" class="card-img-top" alt="foto">

                    <div class="card-body">

                        <h5 class="card-title">{{name}}</h5>

                        <form action="/personajes" method="POST">
                            <button type="submit" value="{{name}}" name="charName">AÃ±adir a favoritos</button>
                        </form>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<div class="listBg text-center">
    <div class="container pt-5">
        <h2 style="background-color: black; color: red;">Lista de personajes</h2>

        <div class="row mt-3">
            <div class="col-md-5">
                <form action="/personajes" method="GET">
                    <input type="text" class="form-control" id="name" name="name">
                    <div class="d-grid gap-2 mt-2">
                        <button type="submit" class="btn btn-dark">Buscar por nombre</button>
                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-5">
                <form action="/personajes" method="GET">
                    <input type="text" class="form-control" id="serie" name="serie">
                    <div class="d-grid gap-2  mt-2">
                        <button type="submit" class="btn btn-dark">Buscar por serie</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            {{#each characters}}
            <div class="col-md-4 d-flex justify-content-center text-center">
                <div class="card mt-5" style="width: 18rem;">

                    <img src="{{thumbnail.path}}.{{thumbnail.extension}}" class="card-img-top" alt="foto">

                    <div class="card-body">

                        <h5 class="card-title">{{name}}</h5>

                        <form action="/personajes" method="POST">
                            <button type="submit" value="{{name}}" class="btn btn-dark" name="charName">AÃ±adir a
                                favoritos</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
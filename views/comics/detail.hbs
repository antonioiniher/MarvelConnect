<div class="profile">
    <div class="container pt-5 fondoblanco2">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 text-center pt-3">
                <img src="{{thumbnail.path}}.{{thumbnail.extension}}" alt="img">
            </div>
            <div class="col-md-6 info">

                <p><strong>Título:</strong>{{title}}</p>
                <p><strong>Páginas: </strong>{{pageCount}}</p>
                {{#if description}}
                <p><strong>Descripcion: </strong>{{description}}</p>
                {{/if}}
                {{#if characters.available}}
                <p><strong>Nº de personajes: </strong>{{characters.available}}</p>
                {{/if}}
                <p><strong>ISBN:</strong>{{isbn}}</p>
                <p><strong>Formato:</strong> {{format}}</p>
            </div>
        </div>

    </div>
</div>